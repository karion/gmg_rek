{% extends 'base.html.twig' %}
{% block body %}

<div class="container mt-4">
    <h1 class="text-primary">User list</h1>
</div>

{% if app.session.flashBag.has('success') %}
    <div class="container mt-4">
        <div class="alert alert-success">
            {{ app.session.flashBag.get('success')[0] }}
        </div>
    </div>
{% endif %}

{% if app.session.flashBag.has('error') %}
    <div class="container mt-4">
        <div class="alert alert-danger">
            {{ app.session.flashBag.get('error')[0] }}
        </div>
    </div>
{% endif %}

<div class="container mt-4">
    <table class="table table-striped table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Firstname</th>
                <th scope="col">Lastname</th>
                <th scope="col">Gender</th>
                <th scope="col">Birthdate</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td class="text-center">{{ user.gender == 'male' ? '&#9794;' : '&#9792;'}}</td>
                    <td class="text-center">{{ user.birthdate|date('d/m/Y') }}</td>
                    <td class="text-center">
                        <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-sm btn-warning">Edit</a>
                        <a href="{{ path('user_remove', {id: user.id}) }}"
                            class="btn btn-danger"
                            onclick="return confirm('Are you sure you want to delete this user?');">
                            Delete
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">No users found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% if pagination.total_entries > pagination.page_size %}
    <div class="container mt-4">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {% for page in 1..pagination.total_pages %}
                    <li class="page-item {{ page == pagination.page_number ? 'active' : '' }}">
                        <a class="page-link" href="{{ path('user_list', { 'page': page }) }}">{{ page }}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </div>  
{% endif %}
{% endblock %}